@model Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Hola - Admin Login</title>
    <link rel="stylesheet" href="~/glassmorphism-login/dist/style.css">
</head>
<body>
    <section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">
                <img src="https://raw.githubusercontent.com/hicodersofficial/glassmorphism-login-form/master/assets/illustration.png" alt="illustration" class="illustration" />
                <h1 class="opacity">ADMIN</h1>
                
                <form method="post" action="/Admin/Login">
                    <input type="text" placeholder="KULLANICIADI" name="AdminName" />
                    <input type="password" placeholder="ŞİFRE" name="AdminPassword" />
                    <button type="submit" class="opacity">GİRİŞ YAP</button>
                </form>
                @if (ViewBag.ErrorMessage != null)
                {
                    <p style="color:red;">@ViewBag.ErrorMessage</p>
                }
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>
    </section>
    <script src="~/glassmorphism-login/dist/script.js"></script>
</body>
</html>
