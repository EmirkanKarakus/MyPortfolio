@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referanslar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslar bölümü ile ilgili işleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim Soyisim</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Görsel</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestimonialId</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId/" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Testimonial/CreateTestimonial/" class="btn btn-warning">Yeni Referans Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>